{%- raw -%}<fieldset class="col-12  mb-5">
  <legend class="form-label">{{label}}</legend>
  <div {{attributes}} class="boolean {{validation}} form-check form-switch mb-5 align-items-center">
    <input {{attributes}} {% if value == true or value == "true" %}checked{% endif %} class="form-check-input" type="checkbox" name="{{name}}" id="{{name}}_true" value="true">
    <label class="form-check-label visually-hidden" for="{{name}}_true">true</label>
  </div>
</fieldset>

{%- endraw -%}