{% raw %}
{%- function detail_page_valid = "modules/module_86/front_end/functions/v1/detail_page_valid", fc_data: fc_data, full_slug: this.full_slug -%}
<div class="col-12 col-lg-6">
    <div class="row align-items-center mb-5">
        <div class="col-12 col-lg-3 mb-3 mb-lg-0">
            <span class="fa-stack sg-icon sg-icon-lg sg-fa-stack">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="far fa-window-maximize fa-stack-1x fa-inverse"></i>
            </span>
            </div>
            <div class="col-12 col-lg-9">
            <h2>{% if detail_page_valid %}<a href="{{this.full_slug}}">{% endif %}{{field_map['Title 1']}}{% if detail_page_valid %}</a>{% endif %}</h2>
            {% if field_map['Description Short 1'] != blank %}
                <p>{{field_map['Description Short 1']}}</p>
            {% endif %}
        </div>
    </div>
    <div class="row align-items-center mb-5 mb-lg-0">
        <div class="col-12 col-lg-3 mb-3 mb-lg-0">
            <span class="fa-stack sg-icon sg-icon-lg sg-fa-stack">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="far fa-window-maximize fa-stack-1x fa-inverse"></i>
            </span>
            </div>
            <div class="col-12 col-lg-9">
            <h2>{% if detail_page_valid %}<a href="{{this.full_slug}}">{% endif %}{{field_map['Title 2']}}{% if detail_page_valid %}</a>{% endif %}</h2>
            {% if field_map['Description Short 2'] != blank %}
                <p>{{field_map['Description Short 2']}}</p>
            {% endif %}
        </div>
    </div>
</div>
<div class="col-12 col-lg-5 offset-lg-1">
    {% if field_map['Image'] != blank %}
        <img class="rounded-3 mw-100" src="{{field_map['Image'] | asset_url }}" alt="{{field_map['Title 1']}}" width="526">
    {% endif %}
</div>
{% endraw %}
